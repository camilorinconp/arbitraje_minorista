# .env.development - Configuraci√≥n para desarrollo

# === Application Settings ===
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=development-secret-key-not-for-production

# === Database Configuration ===
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/arbitraje_dev
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db

# === FastAPI Configuration ===
FASTAPI_HOST=127.0.0.1
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3030,http://127.0.0.1:3000

# === Rate Limiting Configuration ===
RATE_LIMIT_STORAGE_URI=memory://

# === Cache Configuration ===
CACHE_TYPE=memory
CACHE_DEFAULT_TTL=60
CACHE_MAX_SIZE=500

# === Scraping Configuration ===
SCRAPER_MAX_CONCURRENT=3
SCRAPER_DEFAULT_TIMEOUT=30
SCRAPER_DELAY_MIN=0.5
SCRAPER_DELAY_MAX=1.5

# === Scheduler Configuration ===
SCHEDULER_ENABLED=true
SCHEDULER_SCRAPING_INTERVAL=300  # 5 minutes for development

# === Monitoring & Observability ===
METRICS_ENABLED=true
HEALTH_CHECKS_ENABLED=true
STRUCTURED_LOGGING=false

# === Security Settings ===
ENABLE_HTTPS_REDIRECT=false
TRUSTED_PROXIES=127.0.0.1,::1
ALLOWED_HOSTS=localhost,127.0.0.1

# === Performance Settings ===
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# === Development Features ===
ENABLE_DOCS=true
ENABLE_REDOC=true