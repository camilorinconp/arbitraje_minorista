# .env.example - Plantilla de variables de entorno

# === Database Configuration ===
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/arbitraje_minorista
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db

# === Supabase Configuration ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# === Application Settings ===
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-in-production

# === JWT Configuration ===
JWT_SECRET_KEY=your-jwt-secret-key-32-chars-minimum
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# === FastAPI Configuration ===
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3030

# === Rate Limiting Configuration ===
RATE_LIMIT_STORAGE_URI=memory://
# For production use Redis: redis://localhost:6379
RATE_LIMIT_REDIS_URL=redis://localhost:6379/0

# === Cache Configuration ===
CACHE_TYPE=memory
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000

# === Scraping Configuration ===
SCRAPER_MAX_CONCURRENT=5
SCRAPER_DEFAULT_TIMEOUT=30
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; ArbitrajeBot/1.0)
SCRAPER_DELAY_MIN=1
SCRAPER_DELAY_MAX=3

# === Scheduler Configuration ===
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=America/Bogota
SCHEDULER_SCRAPING_INTERVAL=3600  # 1 hour in seconds

# === Monitoring & Observability ===
METRICS_ENABLED=true
HEALTH_CHECKS_ENABLED=true
STRUCTURED_LOGGING=true

# === Sentry Configuration ===
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# === External APIs (if needed) ===
# EXTERNAL_API_KEY=your-api-key-here
# EXTERNAL_API_URL=https://api.example.com

# === Security Settings ===
ENABLE_HTTPS_REDIRECT=true
TRUSTED_PROXIES=127.0.0.1,::1
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# === Performance Settings ===
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600

# === Graceful Shutdown ===
SHUTDOWN_TIMEOUT=30

# === Development Only ===
ENABLE_DOCS=true
ENABLE_REDOC=true